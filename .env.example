# === NODE & SERVER ===
NODE_ENV=development
PORT=8000
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:5000

# === SUPABASE CONFIG ===
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_JWT_SECRET=your_jwt_secret
SUPABASE_PROJECT_ID=your_project_id
SUPABASE_REALTIME_URL=wss://your_project.supabase.co/realtime/v1

# === AUTH ===
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# === ADMIN ===
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change_me_in_production
SUPPORT_EMAIL=support@yourdomain.com

# === SMTP / EMAIL CONFIG ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
MAIL_FROM="Your Platform" <noreply@yourdomain.com>

# === PAYMENT - FLUTTERWAVE ===
FLW_PUBLIC_KEY=your_flw_public_key
FLW_SECRET_KEY=your_flw_secret_key
FLW_ENCRYPTION_KEY=your_flw_encryption_key
FLW_WEBHOOK_HASH=your_flw_webhook_hash

# === VTU PROVIDER - NELLOBYTES ===
NELLOBYTES_BASE_URL=https://api.nellobytesystems.com
NELLOBYTES_USERNAME=your_nellobytes_username
NELLOBYTES_PASSWORD=your_nellobytes_password
NELLOBYTES_API_KEY=your_api_key
NELLOBYTES_SECRET_KEY=your_secret_key
NELLOBYTES_AUTH_TYPE=basic
NELLOBYTES_TIMEOUT=30000
NELLOBYTES_RATE_LIMIT=60
NELLOBYTES_RETRY_ATTEMPTS=3
NELLOBYTES_RETRY_DELAY=5000
NELLOBYTES_CALLBACK_URL=http://localhost:8000/api/v1/webhook/nellobytes
NELLOBYTES_WEBHOOK_URL=http://localhost:8000/api/v1/webhook/nellobytes
NELLOBYTES_WEBHOOK_SECRET=your_webhook_secret

# === VTU PROVIDER - CLUBKONNECT (Alternative) ===
CLUBKONNECT_USERID=your_clubkonnect_userid
CLUBKONNECT_APIKEY=your_clubkonnect_apikey
CLUBKONNECT_CALLBACK_URL=http://localhost:8000/api/v1/vtu/callback

# === SUBDOMAIN / MULTITENANT ===
SUBDOMAIN_BASE_URL=yourdomain.com

# === WEBHOOKS & API ===
WEBHOOK_SECRET=your_webhook_secret
API_KEY_SECRET=your_api_key_secret

# === API CONFIG ===
API_PREFIX=/api/v1
API_VERSION=v1
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# === FEATURES ===
ENABLE_REFERRALS=true
ENABLE_SUPPORT_SYSTEM=true
ENABLE_WALLET_TOPUP=true
AUTO_REFILL_ENABLED=true
DEFAULT_PAYMENT_METHOD=wallet
DEFAULT_CURRENCY=NGN
DEFAULT_WALLET_BALANCE=0
ENABLE_ANALYTICS=true
ENABLE_EMAIL_VERIFICATION=true

# === LOGGING / MONITORING ===
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_optional

# === REFERRAL SYSTEM ===
REFERRAL_BONUS=100
REFERRAL_PERCENTAGE=5

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === SECURITY ===
SESSION_SECRET=your_session_secret
ENCRYPTION_KEY=your_encryption_key
